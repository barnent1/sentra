{
  "name": "sentra",
  "version": "0.1.0",
  "description": "AI Agent Control Center - Native Mac App",
  "author": "Glen Barnhardt",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "build:mac": "npm run build && npm run tauri build -- --target universal-apple-darwin",
    "build:mac:x64": "npm run build && npm run tauri build -- --target x86_64-apple-darwin",
    "build:mac:arm64": "npm run build && npm run tauri build -- --target aarch64-apple-darwin",
    "build:windows": "npm run build && npm run tauri build -- --target x86_64-pc-windows-msvc",
    "build:linux": "npm run build && npm run tauri build -- --target x86_64-unknown-linux-gnu",
    "build:all": "npm run build:mac && npm run build:windows && npm run build:linux",
    "version:patch": "./scripts/bump-version.sh patch",
    "version:minor": "./scripts/bump-version.sh minor",
    "version:major": "./scripts/bump-version.sh major",
    "release:prepare": "./scripts/bump-version.sh",
    "backend:dev": "tsx --watch backend/src/server.ts",
    "backend:build": "tsc --project backend/tsconfig.json",
    "backend:start": "node backend/dist/server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:backend": "vitest run backend/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "@tanstack/react-query": "^5.56.2",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-sql": "^2.0.0",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "bcrypt": "^6.0.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "i18next": "^25.6.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.441.0",
    "next": "15.5",
    "prisma": "6.19.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.3.3",
    "react-markdown": "^10.1.0",
    "recharts": "^2.12.7",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.5.2",
    "zod": "^4.1.12",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.48.0",
    "@tauri-apps/cli": "^2.9.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest-image-snapshot": "^6.4.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.5.5",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.11.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.5",
    "jest-image-snapshot": "^6.4.0",
    "jsdom": "^27.2.0",
    "playwright": "^1.48.0",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.12",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.6",
    "typescript": "^5.6.2",
    "vitest": "^4.0.8"
  }
}
