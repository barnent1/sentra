# Quetrex Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Database
# For SQLite (development):
DATABASE_URL="file:./prisma/dev.db"

# For PostgreSQL (production with Vercel):
# Vercel automatically provides these environment variables when using Vercel Postgres:
# POSTGRES_URL="..."
# POSTGRES_PRISMA_URL="..."
# POSTGRES_URL_NON_POOLING="..."
# POSTGRES_USER="..."
# POSTGRES_HOST="..."
# POSTGRES_PASSWORD="..."
# POSTGRES_DATABASE="..."

# For standard PostgreSQL:
# DATABASE_URL="postgresql://user:password@localhost:5432/quetrex"

# API Keys (REQUIRED for full functionality)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# Get from: https://github.com/settings/tokens (needs 'repo' scope)
GITHUB_TOKEN=

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Vercel Environment (auto-configured on Vercel)
# NEXT_PUBLIC_VERCEL_ENV="production"
# VERCEL_URL="your-app.vercel.app"

# Vercel API (for prototype deployments)
# Get from: https://vercel.com/account/tokens
# VERCEL_TOKEN=your_vercel_api_token
# VERCEL_PROJECT_ID=your_prototype_project_id
# VERCEL_ORG_ID=your_org_or_team_id

# Security
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Encryption secret for API keys storage
# Generate with: openssl rand -base64 32
ENCRYPTION_SECRET=

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Vercel KV (Redis) for caching/sessions
# KV_URL="..."
# KV_REST_API_URL="..."
# KV_REST_API_TOKEN="..."
# KV_REST_API_READ_ONLY_TOKEN="..."
